" Colors and Theme
syntax enable
set background=dark
"colorscheme solarized

" Spaces and Tabs
set tabstop=4 		" number of visual spaces per tab
set softtabstop=4	" number of spaces when editing
set expandtab		" tabs are displyed as spaces

" UI config

set number	    	" show line numbers
set showcmd 		" show last entered command at the bottom bar
set cursorline		" highlights the current line you're on
set showmatch		" highlights matching pairs of  [({})]


